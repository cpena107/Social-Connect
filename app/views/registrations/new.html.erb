<h1> Sign Up </h1>

<%= form_with model: @user, url: sign_up_path do |form| %>

    <div class="mb-3">
        <%= form.text_field :email, class: "form-control", placeholder: "email" %>
    </div>
    <div class="mb-3">
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
    </div>
    <div  class="mb-3">
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "confirm password" %>
    </div>

    <div class="mb-3">
        <%= form.submit "SignUp", class: "btn btn-primary"%>
    </div>

    <div class="mt-3">
        <%= link_to "Already have an account? Log In", sign_in_path, class: "btn btn-secondary" %>
    </div>

<% end %>